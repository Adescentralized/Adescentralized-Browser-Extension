{
  "name": "adescentralized-browser-extension",
  "version": "1.0.0",
  "description": "A cross-browser extension for Firefox and Chrome built with TypeScript",
  "main": "dist/background.js",
  "scripts": {
    "build": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "watch": "webpack --mode=development --watch",
    "clean": "rimraf dist",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.{ts,json,html,css}",
    "dev:chrome": "npm run build:dev && web-ext run --target=chromium",
    "dev:firefox": "npm run build:dev && web-ext run --target=firefox-desktop",
    "package:chrome": "npm run build && web-ext build --source-dir=dist",
    "package:firefox": "npm run build && web-ext build --source-dir=dist"
  },
  "keywords": [
    "browser-extension",
    "chrome-extension",
    "firefox-addon",
    "typescript",
    "web-extension"
  ],
  "author": "Adescentralized",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/webextension-polyfill": "^0.10.7",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.10.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "html-webpack-plugin": "^5.6.0",
    "mini-css-extract-plugin": "^2.8.1",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "web-ext": "^7.11.0",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "webextension-polyfill": "^0.10.0"
  }
}